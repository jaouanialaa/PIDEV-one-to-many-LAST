{% extends '::base.html.twig'%}
{% block modernizer %}
{% endblock %}
{% block css %}
{% endblock css %}
{% block contenu %}
    <div class="galllery item2">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <div class="section-title text-center">
                        <h2>Les régimes</h2>
                        <p>  Ici, vous trouvriez tout les régimes offerts par les nutritionnistes ! ,
                            vous pouvez commencer le suivi dés maintenant !</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="gallery-isotope-section">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="gallery-tab-menu isotope-menu text-center">
                            <ul>
                                <li class="active" data-filter="*">All</li>
                                <li data-filter=".sport">Régime Sportif</li>
                                <li data-filter=".veg">Régime végétarien</li>
                                <li data-filter=".minceur">Régime minceur</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="gallery-tab-content isotope-gallery our-blog blog-pages ptb-100 fix">
                    <div class="row blog-list">
                        {% for regime in regimes %}
                            {% if regime.type == "Régime sportif" %}
                                <div class="col-md-10 col-sm-12 col-xs-12 sport gallery-item">
                                    <div class="single-blog">
                                        <div class="single-blog-top fix">
                                            <div class="blog-img">
                                                <a href="{{ path('client_readRegime',{'id': regime.id }) }}">
                                                    <img src="{{ asset('imagesPidev/' ~ regime.img) }}" alt="">
                                                </a>
                                            </div>
                                            <div class="blog-desc">
                                                <h3><a href="{{ path('client_readRegime',{'id': regime.id }) }}">{{ regime.titre }}</a></h3>
                                                <h4>Posté par :</h4><h5>{{ regime.nutritionniste.username }}</h5>
                                                <a class="read-more" href="{{ path('client_readRegime',{'id': regime.id }) }}">Read more
                                                    <i class="zmdi zmdi-long-arrow-right"></i></a>
                                            </div>
                                        </div>
                                        <div class="blog-bottom-action">
                                            <div class="blog-publish">
                                                <p><i class="zmdi zmdi-time"></i>{{ regime.date | date }} </p>
                                            </div>
                                            <div class="blog-action-box">
                                                <ul>
                                                    <li><a href="#"><i class="zmdi zmdi-favorite-outline"></i>(550)</a>
                                                    </li>
                                                    <li><a href="#"><i class="zmdi zmdi-comments"></i>(200)</a></li>
                                                    <li><a href="#"><i class="zmdi zmdi-share"></i>(100)</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                        {% endfor %}
                    {% for regime in regimes %}
                        {% if regime.type == "Régime minceur" %}
                            <div class="col-md-10 col-sm-12 col-xs-12 minceur  gallery-item">
                                <div class="single-blog">
                                    <div class="single-blog-top fix">
                                        <div class="blog-img">
                                            <a href="{{ path('client_readRegime',{'id': regime.id }) }}">
                                                <img src="{{ asset('imagesPidev/' ~ regime.img) }}" alt="">
                                            </a>
                                        </div>
                                        <div class="blog-desc">
                                            <h3><a href="#">{{ regime.titre }}</a></h3>
                                            <h4>Posté par :</h4><h5>{{ regime.nutritionniste.username }}</h5>
                                            <a class="read-more" href="{{ path('client_readRegime',{'id': regime.id }) }}">Read more
                                                <i class="zmdi zmdi-long-arrow-right"></i></a>
                                        </div>
                                    </div>
                                    <div class="blog-bottom-action">
                                        <div class="blog-publish">
                                            <p><i class="zmdi zmdi-time"></i>{{ regime.date | date}} </p>
                                        </div>
                                        <div class="blog-action-box">
                                            <ul>
                                                <li><a href="#"><i class="zmdi zmdi-favorite-outline"></i>(550)</a>
                                                </li>
                                                <li><a href="#"><i class="zmdi zmdi-comments"></i>(200)</a></li>
                                                <li><a href="#"><i class="zmdi zmdi-share"></i>(100)</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                    {% for regime in regimes %}
                        {% if regime.type == "Régime Végétarien" %}
                            <div class="col-md-10 col-sm-12 col-xs-12 veg  gallery-item">
                                <div class="single-blog">
                                    <div class="single-blog-top fix">
                                        <div class="blog-img">
                                            <a href="#">
                                                <img src="{{ asset('imagesPidev/' ~ regime.img) }}" alt="">
                                            </a>
                                        </div>
                                        <div class="blog-desc">
                                            <h3><a href="{{ path('client_readRegime',{'id': regime.id }) }}">{{ regime.titre }}</a></h3>
                                            <h4>Posté par :</h4><h5>{{ regime.nutritionniste.username }}</h5>
                                            <a class="read-more" href="{{ path('client_readRegime',{'id': regime.id }) }}">Read more
                                                <i class="zmdi zmdi-long-arrow-right"></i></a>
                                        </div>
                                    </div>
                                    <div class="blog-bottom-action">
                                        <div class="blog-publish">
                                            <p><i class="zmdi zmdi-time"></i>{{ regime.date | date }} </p>
                                        </div>
                                        <div class="blog-action-box">
                                            <ul>
                                                <li><a href="#"><i class="zmdi zmdi-favorite-outline"></i>(550)</a>
                                                </li>
                                                <li><a href="#"><i class="zmdi zmdi-comments"></i>(200)</a></li>
                                                <li><a href="#"><i class="zmdi zmdi-share"></i>(100)</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
